{
  "layer": "top",
  "position": "top",
  "height": 30,
  //Gaps between modules
  "spacing": 4,
  // Modules on the left side of the bar
  "modules-left": [
    "clock"
  ],
  // Modules at the center of the bar
  "modules-center": [
    "hyprland/workspaces"
  ],
  // Modules on the right side of the bar
  "modules-right": [
    "pulseaudio",
    "backlight/slider",
    "network",
    "battery"
  ],
  "clock": {
    "interval": 1,
    "timezone": "Europe/Brussels",
    "tooltip-format": "{:%d/%m/%Y}",
    "format-alt": "{:%H:%M:%S}"
  },
  "workspaces": {
    "format": "{name}",
    "on-click": "hyprctl dispatch workspace {name}",
    "all-outputs": true,
    "active-only": false,
    "persistent-workspace": false,
    "sort-by-number": true
  },
  "pulseaudio": {
    "scroll-step": 0.5,
    "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
  },
  "backlight/slider": {
    "orientation": "horizontal",
    "min": 1
  },
  "network": {
    "interval": 2,
    "format-wifi": "{essid}  {signalStrength}%",
    "format-ethernet": " {ipaddr}",
    "format-disconnected": "⚠ Disconnected",
    "tooltip": true,
    "tooltip-format": "Download: {bandwidthDownBits} ↓\nUpload: {bandwidthUpBits} ↑",
    "on-click": "ghostty -e nmtui"
  },
  "battery": {
    "interval": 20,
    "format": "{icon} {capacity}%",
    "format-charging": "  {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": [" ", " ", " ", " ", " "]
  }
}
